<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3>Upload files (mp3, wmv or wav)</h3>
</div>
<div class="modal-body">
    <div class="row-fluid">
        <div class="control-group">
            @using (Html.BeginForm("Upload", "Track", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <table>
                    <tr>
                        <td>
                            <label for="Album">Album Name:</label>
                        </td>
                        <td>
                            <input type="text" name="Album" id="Album" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="Artist">Artist Name:</label>
                        </td>
                        <td>
                            <input type="text" name="Artist" id="Artist" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="files">Filename:</label>
                        </td>
                        <td>
                            <input type="file" name="files" class="btn" multiple />
                        </td>
                    </tr>
                    <tr>
                        <td colspoan="2">
                            <input type="submit" class="btn" />
                        </td>
                    </tr>
                </table>
            }
        </div>
    </div>
</div>
<div class="modal-footer">
    <p>You can select more than one file when browsing for files</p>
</div>